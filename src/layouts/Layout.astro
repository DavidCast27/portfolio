---
import { ClientRouter } from "astro:transitions";
import { LOCALES } from "../constants/i18n.constants.astro";
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import { getI18N } from "@/i18n";
import "@fontsource/onest";
import "../styles/global.css";

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
const { currentLocale, url } = Astro;
const i18n = getI18N({ currentLocale });
const baseUrl = import.meta.env.PROD ? 'https://castri.dev' : url.origin;
// Canonical: base + ruta completa actual (respetando trailingSlash de la app)
const pageUrl = `${baseUrl}${url.pathname}`;

// Alternates: generamos el mismo "resto" del path con prefijos /es o /en
const [, maybeLocale, ...rest] = url.pathname.split("/");
const knownLocales = Object.keys(LOCALES);
const restPath = knownLocales.includes(maybeLocale) ? `/${rest.join("/")}` : url.pathname;
const altRest = restPath === "/" ? "" : restPath;
const altEsUrl = `${baseUrl}${LOCALES.es.href}${altRest}`;
const altEnUrl = `${baseUrl}${LOCALES.en.href}${altRest}`;
---

<!doctype html>
<html lang={currentLocale}>
  <head>
    <meta id="meta-theme-color" name="theme-color" content="#0b0b0c" />
    <script is:inline>
      // Set theme class ASAP to avoid flashes
      const stored =
        typeof localStorage !== "undefined"
          ? localStorage.getItem("theme")
          : null;
      // Default to dark when no stored preference. User choice persists.
      const theme = stored ?? "dark";
      if (theme === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
      // Update theme-color for address bar to match theme
      try {
        const meta = document.getElementById("meta-theme-color");
        if (meta) meta.setAttribute("content", theme === "dark" ? "#0b0b0c" : "#fafafe");
      } catch {}
      try {
        localStorage.setItem("theme", theme);
      } catch {}
    </script>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <meta name="google-adsense-account" content="ca-pub-4053310127194983" />
    <title>{title}</title>
    <link rel="canonical" href={pageUrl} />
    <link rel="alternate" hreflang="x-default" href={altEsUrl} />
    <link rel="alternate" hreflang="es" href={altEsUrl} />
    <link rel="alternate" hreflang="en" href={altEnUrl} />
    <ClientRouter />
    <script type="application/ld+json">
      {JSON.stringify({
        "@context": "https://schema.org",
        "@type": "Person",
        name: i18n.home.name,
        jobTitle: i18n.home.role,
        url: baseUrl,
        sameAs: [
          "https://github.com/DavidCast27",
          "https://www.linkedin.com/in/davidcastrillongonzales/",
          "mailto:david.cast27@gmail.com"
        ]
      })}
    </script>

    <!-- Open Graph -->
    <meta property="og:url" content={pageUrl} />
    <meta property="og:type" content="website" />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <!-- OG/Twitter image (PNG for compatibility) -->
    <meta property="og:image" content={`${baseUrl}/og.png`} />
    <meta property="og:image:type" content="image/png" />
    <meta property="og:image:width" content="1200" />
    <meta property="og:image:height" content="630" />
    <meta property="og:image:alt" content={title} />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="castri.dev" />
    <meta property="twitter:url" content={pageUrl} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={`${baseUrl}/og.png`} />
    <meta name="twitter:image:alt" content={title} />
    {
      import.meta.env.PROD && (
        <script
          async
          src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-4053310127194983"
          crossorigin="anonymous"
        />
      )
    }
  </head>
  <body class="bg-background text-foreground w-full md:max-w-4xl mx-auto">
    <a href="#home" class="sr-only focus:not-sr-only fixed top-4 left-4 z-50 bg-background text-foreground border-2 border-border rounded px-3 py-2 shadow">
      {i18n.a11y.skip_to_content}
    </a>
    <Header />
    <slot />
    <Footer />
  </body>
</html>
