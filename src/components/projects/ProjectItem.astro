---
import type { JSX } from "astro/jsx-runtime";
import TagPill from "../ui/TagPill.astro";
interface Props {
  title: string;
  description: string;
  tags: Array<{ name: string; className: string; Icon: JSX.Element }>;
  image: string;
}
const { title, description, tags, image } = Astro.props;
---

<article class="mb-6 md:mb-12">
  <h4 class="mb-4 text-base md:text-lg font-semibold text-green-100/80 gap-4">
    {title}
  </h4>
  <p class="mb-4 text-xs md:text-sm lg:text-base text-gray-400 text-pretty">
    {description}
  </p>
  <ul class="flex gap-2 md:gap-4 flex-row mb-4 flex-wrap">
    {
      tags.map(({ name, Icon, className }) => (
        <TagPill className={className}>
          <Icon class="size-6" />
          <span class="hidden md:inline">{name}</span>
        </TagPill>
      ))
    }
  </ul>
  <img
    class="rounded shadow-2xl shadow-white/15 w-full"
    src={image}
    alt={`imagen de ${title} `}
  />
</article>
