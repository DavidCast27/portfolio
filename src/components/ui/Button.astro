---
interface Props {
  variant?: "default" | "destructive" | "secondary" | "outline" | "info";
  size?: "sm" | "md" | "lg";
  href?: string;
  class?: string;
  type?: "button" | "submit" | "reset";
  disabled?: boolean;
}

const {
  variant = "default",
  size = "md",
  href,
  class: className = "",
  type = "button",
  disabled = false,
  ...rest
} = Astro.props as Props & Record<string, any>;

const base =
  "inline-flex items-center justify-center whitespace-nowrap text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 rounded-[--radius] border";

const sizes: Record<Required<Props>["size"], string> = {
  sm: "h-8 px-3",
  md: "h-9 px-4",
  lg: "h-10 px-6",
};

const variants: Record<Required<Props>["variant"], string> = {
  default: "bg-primary text-primary-foreground hover:bg-primary/90 border-transparent",
  destructive: "bg-destructive text-destructive-foreground hover:bg-destructive/90 border-transparent",
  secondary: "bg-secondary text-secondary-foreground hover:bg-secondary/80 border-transparent",
  outline: "bg-background text-foreground hover:bg-accent/20 border-border",
  info: "bg-info text-info-foreground hover:bg-info/90 border-transparent",
};

const classes = `${base} ${sizes[size]} ${variants[variant]} ${className}`;
---

{href ? (
  <a class={classes} href={href} {...rest}>
    <slot />
  </a>
) : (
  <button class={classes} type={type} disabled={disabled} {...rest}>
    <slot />
  </button>
)}

