---
const { class: className, id, title } = Astro.props;
---

<section id={id} class={`w-full mx-auto max-w-xl lg:max-w-3xl ${className}`}>
  {
    title && (
      <h2 class="text-2xl lg:text-3xl font-semibold mb-4 md:mb-6 lg:mb-8 flex flex-row gap-x-2 items-center">
        <slot name="icon" />
        {title}
      </h2>
    )
  }

  <slot />
</section>
