---
const { class: className, id, title } = Astro.props;
---

<section id={id} class={`scroll-mt-20 pb-12 md:pb-16 ${className}`}>
  {
    title && (
      <h2 class="text-2xl lg:text-3xl font-semibold mb-6 md:mb-8 flex flex-row gap-x-2 items-center">
        <slot name="icon" />
        {title}
      </h2>
    )
  }

  <slot />
</section>
