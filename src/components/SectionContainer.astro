---
const { class: className, id, title } = Astro.props;
---

<section
  id={id}
  class={`w-full mx-auto sm:w-[600px] lg:w-[740px] ${className}`}
>
  {
    title && (
      <h3 class="text-2xl lg:text-3xl font-semibold mb-4 md:mb-6 lg:mb-8 flex flex-row gap-x-2 items-center ">
        <slot name="icon" />
        {title}
      </h3>
    )
  }

  <slot />
</section>
