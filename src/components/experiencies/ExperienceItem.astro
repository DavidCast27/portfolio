---
import Badge from "../ui/Badge.astro";
import Paragraph from "../ui/Paragraph.astro";
interface Props {
  title: string;
  description: string;
  date: string;
  actual: boolean;
}
const { title, description, date, actual } = Astro.props;
---

<div
  class="absolute size-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white"
>
</div>
<header
  class="flex flex-col gap-2 items-start sm:flex-row sm:items-center sm:gap-4 mb-4"
>
  <h4 class="text-lg md:text-xl font-semibold text-green-100/80 gap-4">
    {title}
  </h4>
  {actual && <Badge color="yellow">Actualmente</Badge>}
</header>
<time
  class="block mb-2 text-sm md:text-base lg:text-lg leading-none text-gray-500"
>
  {date}
</time>
<Paragraph>{description}</Paragraph>
