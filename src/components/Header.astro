---
import { HEADER_ITEMS } from "../constants/nav.constants";
import { getI18N } from "../i18n";
import MenuIcon from "./icons/MenuIcon.astro";
import LanguageSelector from "./ui/LanguageSelector.astro";
import ThemeToggle from "./ui/ThemeToggle";

const { currentLocale } = Astro;
const i18n = getI18N({ currentLocale });
---

<header class="bg-background fixed inset-x-0 z-20">
  <div
    class="mx-auto max-w-4xl px-6 py-4 flex justify-between items-center sm:gap-x-2"
  >
    <button
      id="menu-toggle"
      type="button"
      class="z-50 inline-flex sm:hidden hover:bg-accent/20 rounded transition hover:scale-110 p-1 border-2 border-border"
      aria-label="Menu"
      aria-expanded="false"
      aria-controls="mobile-menu"
    >
      <MenuIcon class="size-6" />
    </button>

    <nav
      aria-label={i18n.a11y.nav.main}
      class="items-center justify-between hidden sm:flex w-full"
    >
      <ul class="flex gap-2">
        {
          HEADER_ITEMS.map(({ label, href }) => (
            <li>
              <a
                href={href}
                class="text-sm lg:text-base hover:bg-accent/20 rounded px-2 py-2 transition hover:scale-110 aria-current:text-primary aria-current:underline aria-current:underline-offset-4"
              >
                {i18n.menu[label]}
              </a>
            </li>
          ))
        }
      </ul>
      <LanguageSelector />
    </nav>

    <ThemeToggle client:only />
  </div>

  <!-- Menú de navegación móvil para pantallas pequeñas -->
  <nav
    aria-label={i18n.a11y.nav.main}
    id="mobile-menu"
    class="bg-background/80 backdrop-blur-sm -translate-y-full transition-transform sm:hidden w-full flex flex-col items-center text-center text-2xl fixed top-0 left-0 right-0 h-dvh place-content-center gap-2"
  >
    <ul>
      {
        HEADER_ITEMS.map(({ label, href }) => (
          <li>
            <a
              href={href}
              class="menu-item text-xl hover:bg-accent/20 rounded px-1 py-2 transition hover:scale-110 aria-current:text-primary aria-current:underline aria-current:underline-offset-4"
            >
              {i18n.menu[label]}
            </a>
          </li>
        ))
      }
    </ul>
    <LanguageSelector />
  </nav>
</header>

<script>
  document.addEventListener("astro:page-load", () => {
    const menuToggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const menuItems = document.querySelectorAll<HTMLElement>(".menu-item");

    if (!menuToggle || !mobileMenu) return;

    const setMenuOpen = (open) => {
      mobileMenu.classList.toggle("translate-y-0", open);
      mobileMenu.classList.toggle("-translate-y-full", !open);
      document.body.classList.toggle("overflow-hidden", open);
      menuToggle.setAttribute("aria-expanded", String(open));
    };

    let isOpen = false;

    menuToggle.addEventListener("click", () => {
      isOpen = !isOpen;
      setMenuOpen(isOpen);
    });

    menuItems.forEach((elem) => {
      elem.addEventListener("click", () => {
        isOpen = false;
        setMenuOpen(false);
      });
    });

    document.addEventListener("keydown", (e) => {
      if (e.key === "Escape" && isOpen) {
        isOpen = false;
        setMenuOpen(false);
      }
    });

    // Scroll spy: aria-current al link de la sección visible
    const links = Array.from(
      document.querySelectorAll<HTMLAnchorElement>('nav a[href^="#"]')
    );
    const sections = links
      .map((a) =>
        document.querySelector<HTMLElement>(a.getAttribute("href") || "")
      )
      .filter(Boolean) as HTMLElement[];

    const updateActive = () => {
      let current: HTMLElement | null = null;
      for (const section of sections) {
        const rect = section.getBoundingClientRect();
        if (rect.top <= 120 && rect.bottom > 120) {
          current = section;
          break;
        }
      }
      links.forEach((a) => a.removeAttribute("aria-current"));
      if (current) {
        const id = `#${current.id}`;
        links
          .filter((a) => a.getAttribute("href") === id)
          .forEach((a) => a.setAttribute("aria-current", "true"));
      }
    };

    updateActive();
    document.addEventListener("scroll", updateActive, { passive: true });
  });
</script>
